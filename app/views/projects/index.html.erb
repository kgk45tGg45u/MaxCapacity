  <div class="container-projects align-items-center mx-auto" style="padding-bottom:100px; width: 996px;">

  <div class="icon-bar">
    <%= link_to projects_path, class: 'icon-link text-decoration-none pr-3' do %>
      <strong><h4>All Projects</h4></strong>
    <% end %>

    <%= link_to projects_path(filter: 'my-projects'), class: 'icon-link text-decoration-none pr-3' do %>
      <h4>My Projects</h4>
    <% end %>

    <%= link_to projects_path(filter: 'completed-projects'), class: 'icon-link text-decoration-none pr-3' do %>
      <h4>Completed Projects</h4>
    <% end %>

    <%= link_to new_project_path do %>
      <i class="fa-regular fa-square-plus fa-2xl pr-3 create-new" style="color: #5c8984;"></i>
    <% end %>
  </div>

    <div class="row row-cols-4">
      <% @projects.each do |project| %>
        <div class="card-for-project col mb-4" data-aos="zoom-in">
          <div class="dropdown text-right">
            <button type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: transparent;border: none";>
              <i class="fa-solid fa-ellipsis-vertical"></i>
            </button>
            <div class="dropdown-menu text-decoration-none" aria-labelledby="dropdownMenuButton">
              <em><%= link_to "Edit", edit_project_path(project), class: "dropdown-item" %></em>
              <em><%= link_to "Delete", project_path(project), class: "dropdown-item", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this listing?"} %></em>
            </div>
          </div>

          <%= link_to project_path(project) do %>
            <h2><%= link_to project.name, project_path(project), class: 'text-decoration-none text-reset' %>
              <% if project.priority == "[\"High\"]" %>
                <i class="fa-solid fa-circle fa-2xs" style="color: #fb6060;"></i>
                <% elsif project.priority == "[\"Medium\"]" %>
                  <i class="fa-solid fa-circle fa-2xs" style="color: #fbb360;"></i>
                <% elsif project.priority == "[\"Low\"]" %>
                  <i class="fa-solid fa-circle fa-2xs" style="color: #78e26a;"></i>
              <% end %></h2>
              <div class="p-2 rounded-bottom row justify-content-space-between">
                <p><%= project.project_manager %></p>
                <div class="col text-end">
                </div>
                <small><p class="text-left mt-3 px-2" style="color: #000000;">Days to deadline:</p></small>
                <div class="w3-border w3-round align-items-center" style="width: 300px;">
                  <% percent = ((Date.today - project.created_at.to_date).to_i/(project.deadline - project.created_at.to_date).to_i)*100 %>
                  <div class="w3-sand w3-round" style="height:10px;width: <%= percent %>%"></div>
                </div>
                <% @project_member = project.members.last(3) %>
                <% @project_member.each do |member| %>
                  <div class="avatar-small my-4 pt-2">
                    <small><%= member.name.first %></small>
                  </div>
                <% end %>
                <div class="avatar-small my-4 text-center pt-3 ml-3 edit-pc" style="margin-left:10px";>
                  <%= link_to edit_project_path(project), class:"text-decoration-none" do %>
                    <i class="fa-solid fa-pen fa-2xs" style="color: #5c8984;"></i>
                  <% end %>
                </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
